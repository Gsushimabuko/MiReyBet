<!DOCTYPE html>
<html>
    <head>
        <title>Mirey Bet</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="/estilos/index.css">    
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="container">
        <%- include('menu_admin') %>
        <h2>Edición Categoria</h2>
        <form method="post" action="/categoria/modificar">
        <input type="hidden" name="id" value="<%= juego.id %>" /> 
            <div class="mb-2">   
                <label class="form-label">Nombre:</label>
                <input name="nombre" type="text" class="form-control" 
                value="<%= categoria.nombre %>"
                />
            </div>
            <div  class="mb-2">
                <label class="form-label">Tipo Juego:</label>
                <select name="juegoCategoriaJuegoId" class="form-select">
                    <option value="-1">----- Seleccione una opción -----</option>
                    <% categoriaJuego.forEach( (tipo)=> { %>
                        <% if (tipo.id == juego.categoriaJuegoId)  { %>
                            <option selected value="<%= tipo.id%>"><%= tipo.nombre %></option>
                        <% }else { %>
                            <option value="<%= tipo.id%>"><%= tipo.nombre %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div  class="mb-2">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a id= "btnRegresar" class="btn btn-primary">Cancelar</a>
        <%- include('footer') %>
        <script  src="/js/regresar.js"></script>  
    </body>
</html>