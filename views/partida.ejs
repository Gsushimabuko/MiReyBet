<!DOCTYPE html>
<html>
    <head>
        <title>Mirey Bet</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="/estilos/index.css">   
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="container">
        <%- include('menu_admin') %>
        <h2>Mantenimiento de Partidas</h2>
        <a class="btn btn-success" href="/partida/new">Nueva Partida</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Juego</th>
                    <th>Fecha y Hora de Inicio</th>
                    <th>Equipo A</th>
                    <th>Equipo B</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% partidas.forEach( (partida) => { %>
                    <tr>
                        <td><%= partida.id %></td>
                        <td><%= partida.juegoNombre %></td>
                        <td><%= partida.fecha %></td>
                        <td><%= partida.equipoA %></td>  
                        <td><%= partida.equipoB %></td>
                        <td><%= partida.estadoPartida %></td>                  
                        <td>
                            <a href="/partida/modificar/<%= partida.id %>" >Editar</a>
                            <a href="/partida/eliminar/<%= partida.id %>" >Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <%- include('footer') %>
    </body>
</html>