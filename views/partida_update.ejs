<!DOCTYPE html>
<html>
    <head>
        <title>Mirey Bet</title>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="/estilos/index.css">    
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body class="container">
        <%- include('menu_admin') %>
        <h2>Edición Partida</h2>
        <form method="post" action="/partida/modificar">
        <input type="hidden" name="partida_id" value="<%= partida.id %>" /> 
            <div class="mb-2">   
                <label class="form-label">Juego:</label>
                <select name="partida_juego" class="form-select">
                    <option value="-1">----- Seleccione una opción -----</option>
                    <% nombreJuego.forEach( (juego)=> { %>
                        <% if (juego.nombre == partida.nombreJuegoId)  { %>
                            <option selected value="<%= juego.id>"><%= juego.nombre %></option>
                        <% }else { %>
                            <option value="<%= juego.id%>"><%= juego.nombre %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div>
            <div>
                <label class="form-label">Fecha y Hora de Inicio:</label>
                <input name="partida_fecha" type="datetime" class="form-control" />
            </div>
            <div>
                <label class="form-label">Duracion:</label>
                <input name="partida_duracion" type="number" class="form-control" />
            </div>
            <div>
                <label class="form-label">Equipo A:</label>
                <input name="partida_equipoA" type="text" class="form-control" />
            </div>
            <div>
                <label class="form-label">Equipo B:</label>
                <input name="partida_equipoB" type="text" class="form-control" />
            </div>
            <div  class="mb-2">
                <label class="form-label">Estado:</label>
                <select name="partida_estado" class="form-select">
                    <option value="-1">----- Seleccione una opción -----</option>
                    <% estadosPartida.forEach( (estado)=> { %>
                        <% if (estado.id == partida.estadoId)  { %>
                            <option selected value="<%= estado.id%>"><%= estado.nombre %></option>
                        <% }else { %>
                            <option value="<%= estado.id%>"><%= estado.nombre %></option>
                        <% } %>
                    <% }) %>
                </select>
            </div  class="mb-2">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a id= "btnRegresar" class="btn btn-primary">Cancelar</a>
        <%- include('footer') %>
        <script  src="/js/regresar.js"></script>  
    </body>
</html>