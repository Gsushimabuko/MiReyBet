<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Team-Bear</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/estilos/index.css">    
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>

    <%- include('menu_cuenta') %>

    <body class="container">
        
      
        <h3 class="display-2 proximos"><b>Mis Apuestas</b></h3>
            
        <!-- FILTROS DE BÚSQUEDA-->
        <div class="row mt-4"> 

            
            <!--<img  class="col-4" src="/assets/imagenes/filter.png" > -->
            
            
            
        </div>
        
            
        
        <!-- Tabla Partidas-->
        <div class="row">
            <table class="table col-12">
                <thead>
    
    
                    <tr>
                        <th>Código apuesta</th>
                        <th>Código partida </th>
                        <th>Juego Tipo</th>
                        <th>Fecha</th>
                        <th>Evento</th>
                        <th>Selección</th>
                        <th>Monto Apostado</th>
                        <th>Factor</th>
                        <th>Estado</th>
                        <th>Resultado</th>
    
                    </tr>
                    
                </thead>
                
                
            
                <tbody id="tabla">
    
                    <% apuestasUsuario.forEach((i) => { %>

                        
                        <tr>
                            <% if(i[3] == undefined || i[1] == null) { %>
                                <td><%= i[0] %> </td> 
                                <% for (var i = 0; i < 9; i++){ %> 
                                <td>
                                     ERROR
                                </td> 
                                <% } %> 
                                <% }else{ %> 

                            <td><%= i[0] %></td>
                            <td><%= i[1] %></td>
                            <td><%= i[3][3] %></td>
                            <td><%= i[3][0] %></td>
                            <td> 
                                <%= i[3][1] %>
                                    vs
                                <%= i[3][2] %>
                            </td>
                            <!-- Selección -->
                            <td><%= i[2] %></td>

                            <td><%= i[5] %></td>
                            <td><%= i[4] %></td>
                            <% if(i[3][4] == 1) { %>
                            <td>Pendiente</td>
                            <% }else if(i[3][4] == 2){ %>
                                <td>Comenzado</td>
                            <% }else if(i[3][4] == 3){ %>
                                <td>Finalizado</td>
                            <% }else{ %>
                                <td>Suspendida</td>
                            
                            <% } %>

                            <% if(i[3][5] == i[2]) { %>

                                <td> Ganada </td>

                            <% }else{ %>

                                <td> - </td>
                                
                            <% } %>

                            <!-- 
                            <td></td>
                            <td</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><%= i.seleccion %></td>
                            <td><%= i.monto %></td>
                            <td><%= i.ganancia / i.monto  %></td>
                            <td><%=i.estado%></td>
                             <% if(i.estado == "0") { %>
                                <td> - </td>
                                <% }else if (i.estado == "1") { %>
                                    <td><%= i.ganancia %></td>
                                <% }else{ %>
                                    <td>0</td>
                                <% } %>
                          
                            -->
                        </tr>
                        <% } %> 
                        <% }) %>
    
                </tbody>
    
    
            </table>


        </div>
            
                        




           <!--FOOTER-->
           <%- include('footer') -%> 
    
    <script  src="/js/hardcode.js"></script>
    </body>
</html> 